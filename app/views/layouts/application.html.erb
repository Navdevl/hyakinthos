<!DOCTYPE html>
<html>
  <head>
    <title>Hyakinthos</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-12 mt-2">
          <% if user_signed_in? %>
            <%= link_to "Log out as #{current_user.email}", destroy_user_session_path, method: :delete, class: "float-right" %>
          <% end %>
        </div>
      </div>
      <div class="mt-4">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
